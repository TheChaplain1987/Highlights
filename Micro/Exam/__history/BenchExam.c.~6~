#include <18f4520.h>
#use delay (clock = 20000000)
#fuses HS, NOWDT, NOLVP
#include "../Library/myLibrary.h"
#include "../Library/modifiedlcd.h"

float Vin = 0;

#INT_AD
void int_ad_isr() {
   Vin = *Q * (5.0 / 1023.0 );
}

main(){
   // Initialize LCD
   lcd_init();
   
   // Analog setup
   *TRISA = 0x01;
   ADCON1 -> PCFGx = 0xE;
   ADCON0 -> ADON = 1;
   ADCON0 -> CHSx = 0;   // Channel 0
   ADCON1 -> VCFG0 = 0;  
   ADCON1 -> VCFG1 = 0;  
   ADCON2 -> ADFM = 1;   // Right Justified
   ADCON2 -> ACQTx = 5;
   ADCON2 -> ADCSx = 5;
   
   // Interrupt setup
   PIE1 -> ADIE = 1;
   INTCON -> PEIE = 1;
   INTCON -> GIE = 1;
   
   while(1){
      ADCON0 -> GODONE=1;   // Trigger
      delay_ms( 250 );
    
      printf(lcd_putc,"\fTemp= %f", *Q);    
   }
}

