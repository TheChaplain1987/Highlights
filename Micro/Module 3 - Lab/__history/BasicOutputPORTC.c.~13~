#include <18f4520.h>
#use delay( clock = 20000000 )  // Set clock to 20MHz
#fuses HS, NOWDT, NOLVP
#include "../../Library/myLibrary.h"

struct myMatrix {
   int ROW:4;
   int COL:4;
};

struct myMatrix *MATRIXC = *LATC;

#INT_EXT
void int_ext_isr() {
   MATRIXC -> ROW = 0xF;
   MATRIXC -> COL = 0x1;
   delay_ms( 10 );
}

main() {

   ADCON1 -> PCFGx = 15; // ALL analog
   *TRISB = 0x01;
   INTCON2 -> INTEDG0 = 1; // Trigger on raising edge
   INTCON -> INT0IE = 1;
   INTCON -> PEIE = 1;
   INTCON -> GIE = 1;
   
   while( 1 ) {
   
   }
}
