#include <18f4520.h>
#use delay( clock = 20000000 )  // Set clock to 20MHz
#fuses HS, NOWDT, NOLVP
#include "../Library/myLibrary.h"

int index = 1;

#INT_EXT
void int_ext_isr() {

   *LATC |= 0x00; // Make all of PORTC 0V

   switch( index ) {
      case 1:
         *LATC |= 0x1F;
         break;
      case 2:
         *LATC |= 0x2F;
         break;
   }
   index++;
}

main() {

   // Setting PORTC
   *TRISC = 0x00;
   
   // Setting PORTB
   ADCON1 -> PCFGx = 15; // ALL analog
   *TRISB = 0x01;
   INTCON2 -> INTEDG0 = 1; // Trigger on raising edge
   INTCON -> INT0IE = 1;
   INTCON -> PEIE = 1;
   INTCON -> GIE = 1;
   
   while( 1 ) {
   
   }
}
